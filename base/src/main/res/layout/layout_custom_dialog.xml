<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_setting_pop"
    android:paddingStart="@dimen/x45"
    android:paddingEnd="@dimen/x45"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_setup"
        android:visibility="gone"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/y80"
        android:layout_marginTop="@dimen/y25"
        android:src="@drawable/ico_setup_pop"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y76"
        android:textColor="@color/white"
        android:textSize="@dimen/x34"
        tools:text="标题"/>

    <TextView
        android:id="@+id/tv_content"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9BA1AC"
        android:textSize="@dimen/x24"
        android:gravity="center"
        android:layout_marginTop="@dimen/y15"
        android:layout_marginStart="@dimen/x15"
        android:layout_marginEnd="@dimen/x15"
        tools:text="内容内容内容内内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y75"
        android:layout_marginBottom="@dimen/y25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_refuse"
            android:layout_width="@dimen/x250"
            android:layout_height="@dimen/y70"
            android:background="@drawable/bg_setting_pop_refuse"
            android:gravity="center"
            android:textColor="@color/color_999"
            android:textSize="@dimen/x28"/>

        <TextView
            android:id="@+id/tv_allow"
            android:layout_width="@dimen/x250"
            android:layout_height="@dimen/y70"
            android:background="@drawable/bg_start_scan"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/x28"
            android:layout_marginStart="@dimen/x30"/>
    </LinearLayout>

</LinearLayout>
